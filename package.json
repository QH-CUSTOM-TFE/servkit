  "main": "./dist/index.js",
  "author": "QH-CUSTOM-TFE",
  "dependencies": {
    "eventemitter3": "2.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-proposal-export-default-from": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^24.0.16",
    "babel-jest": "^24.8.0",
    "husky": "3.1.0",
    "jest": "^24.8.0",
    "regenerator-runtime": "^0.13.6",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-replace": "^2.3.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "brotli": "^1.3.2",
    "chalk": "^4.1.0",
    "@microsoft/api-extractor": "^7.13.4"
  },
  "scripts": {
    "start": "npm run tslint && npm run test && npm run build",
    "tslint": "tslint 'src/**/*.ts'",
    "build": "node --max-old-space-size=8192 build/build-pkg.js",
    "postapi": "rm -rf dist/constant && rm -rf dist/decl && rm -rf dist/interfaces",
    "api": "api-extractor run --local",
